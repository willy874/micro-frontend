{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types",
      "src/types",
      "types"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "extends": "../configuration/typescript",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/**/*.d.ts",
    "tests/*.ts",
    "tests/*.d.ts",
    "tests/*.tsx",
    "types/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
