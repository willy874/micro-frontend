{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ScriptHost"],
    "allowJs": true,
    "noEmit": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "react-dom", "webpack", "jest"],
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types",
      "src/types"
    ],
    "paths": {
      "#/*": ["src/types"],
      "@/*": ["src/*"]
    },
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/**/*.d.ts",
    "tests/*.ts",
    "tests/*.d.ts",
    "tests/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
